<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	method="upgrade"
	version="1.6">
	<name>twitterwidget</name>
	<author>Emerson Rocha Luiz</author>
	<creationDate>2011-07-30</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Webdesign Assessoria em Tecnologia da Informacao.</copyright>
	<license>GNU General Public License version 3</license>
	<authorEmail>emerson@webdesign.eng.br</authorEmail>
	<authorUrl>http://fititnt.org</authorUrl>
	<version>1.0RC1</version>
	<description>MOD_TWITTERWIDGET_DESCRIPTION</description>
	<files>
		<filename module="mod_twitterwidget">mod_twitterwidget.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
                <folder>js</folder>
                <folder>languages</folder>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.mod_twitterwidget.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_twitterwidget.sys.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_twitterwidget.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_twitterwidget.sys.ini</language>	
	</languages>
		
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="url"
					type="text"
                                        size="60"
                                        max="255"
					label="MOD_TWITTERWIDGET_URL_LABEL"
					description="MOD_TWITTERWIDGET_URL_DESC"
					default="/modules/mod_twitterwidget/js/twitterwidget.js">
				</field>
                                <field
					name="moduleclass_sfx"
					type="text"
					label="MOD_TWITTERWIDGET_MODULECLASS_SFX_LABEL"
					description="MOD_TWITTERWIDGET_MODULECLASS_SFX_DESC"
					default="">
				</field>					
			</fieldset>
		</fields>
	</config>
</extension>
